<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.FirstFragment">
    <ImageView
            android:layout_width="218dp"
            android:layout_height="81dp"
            android:src="@drawable/sevlogoprimary" android:id="@+id/imageView5"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Welcome to"
            android:layout_width="174dp"
            android:textColor="@color/primary"
            android:layout_height="40dp" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"
            app:layout_constraintVertical_bias="0.3"/>
    <Button
            android:text="Register"
            android:layout_width="168dp"
            android:background="@drawable/roundedbutton"
            android:layout_height="42dp"
            android:id="@+id/homeregister"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:rippleColor="@color/primary"
            android:backgroundTint="@color/primary"
    />
    <Button
            android:text="Continue as Guest"
            android:layout_width="171dp"
            android:layout_height="42dp" android:id="@+id/guestaccess"
            app:layout_constraintTop_toBottomOf="@+id/homeregister" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp" android:textSize="12sp"/>
    <TextView
            android:text="Already a user? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/login"
            app:layout_constraintStart_toEndOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>